@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-primary mb-4">Welcome to Inventory Management</h1>
            <p class="lead">Effortlessly manage your products, orders, and transactions with our intuitive system.</p>
            <a href="/ProductsList/viewproduct" class="btn btn-primary btn-lg me-2">View Products</a>
            <a href="/Orders" class="btn btn-secondary btn-lg">View Orders</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fa fa-box fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Add, edit, and manage your product inventory.</p>
                    <a href="/ProductsList" class="btn btn-outline-primary">Manage Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fa fa-shopping-cart fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text">Track customer orders and manage order details.</p>
                    <a href="/Orders" class="btn btn-outline-secondary">Manage Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="fa fa-chart-line fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">Generate detailed inventory and sales reports.</p>
                    <a href="/Reports" class="btn btn-outline-success">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>
